<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.VollaWiki" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">#2196F3</item>
        <item name="colorPrimaryVariant">#1976D2</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorSecondary">#03DAC6</item>
        <item name="colorSecondaryVariant">#018786</item>
        <item name="colorOnSecondary">#000000</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Edge-to-Edge: Status- und Navigationsleiste transparent machen -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>

        <!-- Optional: Scrim (Schatten) unter Statusleiste deaktivieren -->
        <item name="android:enforceStatusBarContrast">false</item>
    </style>
</resources>